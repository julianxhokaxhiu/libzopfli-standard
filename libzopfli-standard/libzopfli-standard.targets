<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <!-- Base path relative to this .targets file -->
    <NativeBasePath>$(MSBuildThisFileDirectory)..\..\runtimes</NativeBasePath>
  </PropertyGroup>

  <!-- Windows x86 -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'win-x86'">
    <Content Include="$(NativeBasePath)\win-x86\native\zopfli.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>zopfli.dll</Link>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>

  <!-- Windows x64 -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'win-x64'">
    <Content Include="$(NativeBasePath)\win-x64\native\zopfli.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>zopfli.dll</Link>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>

</Project>
